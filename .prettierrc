{
  "printWidth": 100,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.css", "*.scss", "*.less"],
      "options": {
        "parser": "css",
        "singleQuote": false,
        "tabWidth": 4
      }
    },
    {
      "files": ["*.tsx", "*.jsx"],
      "options": {
        "parser": "babel-ts",
        "trailingComma": "es5"
      }
    }
  ]
}
